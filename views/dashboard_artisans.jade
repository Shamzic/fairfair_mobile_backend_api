extends layout

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
      script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js", type='text/javascript')
      script(src='/javascript/script.js', type='text/javascript')
      div.header #{title}
      table
        thread
          tr
            td.td-top id
            td.td-top status
            td.td-top Expo Push Token
            td.td-top Send notification
            each item, i in artisans
              if (i % 2)
                - trclass = "white"
              else
                - trclass = "grey"
              tr(class=trclass)
                td #{item.fairfair_id}
                td #{item.status}
                td #{item.expo_push_token}
                td 
                  button(onclick='sendNotification(#{item.fairfair_id},\"#{item.expo_push_token}\")') Click

